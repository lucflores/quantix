{
  "info": { "name": "Quantix API", "_postman_id": "quantix-api", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "Auth / Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:4000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","auth","login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@quantix.com\",\n  \"password\": \"1234\"\n}" }
      }
    },
    {
      "name": "Products / List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:4000/api/products", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","products"] }
      }
    },
    {
      "name": "Products / Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:4000/api/products", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","products"] },
        "body": { "mode": "raw", "raw": "{\n  \"sku\":\"P001\",\n  \"name\":\"Lapicera\",\n  \"cost\":50,\n  \"price\":100,\n  \"stock\":0,\n  \"minStock\":5\n}" }
      }
    },
    {
      "name": "Products / Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:4000/api/products/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","products","{{productId}}"] },
        "body": { "mode": "raw", "raw": "{\n  \"price\":120\n}" }
      }
    },
    {
      "name": "Products / Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:4000/api/products/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","products","{{productId}}"] }
      }
    },
    {
      "name": "Movements / Create (IN/OUT)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:4000/api/movements", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","movements"] },
        "body": { "mode": "raw", "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"kind\": \"IN\",\n  \"quantity\": 10\n}" }
      }
    },
    {
      "name": "Movements / List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:4000/api/movements", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api","movements"] }
      }
    }
  ],
  "variable": [{ "key": "token", "value": "" }, { "key": "productId", "value": "" }]
}
